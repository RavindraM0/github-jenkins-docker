pipeline {
    agent any

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main',
                url: 'https://github.com/RavindraM0/github-jenkins-docker'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t windows-cicd-app .'
            }
        }

        stage('Run Docker Container') {
            steps {
                bat '''
                docker stop windows-app || exit 0
                docker rm windows-app || exit 0
                docker run -d -p 5000:5000 --name windows-app windows-cicd-app
                '''
            }
        }
    }
}
