pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/RavindraM0/github-jenkins-docker.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t github-jenkins-docker .'
            }
        }
        stage('Run Container') {
            steps {
                sh '''
                docker stop github-jenkins-docker || true
                docker rm github-jenkins-docker || true
                docker run -d -p 5000:5000 --name github-jenkins-docker github-jenkins-docker
                '''
            }
        }
    }
}
